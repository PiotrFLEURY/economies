<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grisandroid"
    android:orientation="vertical"
    tools:context=".ProfileSelectionActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48sp"
        android:background="@color/blueandroid"
        android:gravity="center_vertical|left"
        android:padding="16sp"
        android:id="@+id/profileLayoutTitle"
        android:text="@string/selectaprofile"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvProfileSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/profilelayout" />

</LinearLayout>
